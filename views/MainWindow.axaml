<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="copier.Views.MainWindow"
        Title="Copier App"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="Full"
        Width="600" Height="400">

        <DockPanel Margin="10 50 10 10">

            <WrapPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0 0 0 10">
                <Button Content="New" Click="New_Click" Margin="5"/>
                <Button Content="Search" Click="Search_Click" Margin="5"/>
                <Button Content="Export" Click="Export_Click" Margin="5"/>
                <Button Content="Import" Click="Import_Click" Margin="5"/>
                <Button Content="Clear All" Click="ClearAll_Click" Margin="5"/>
            </WrapPanel>


            <!-- Search bar -->
            <StackPanel x:Name="SearchPanel"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal"
                        Spacing="10"
                        IsVisible="False">

                <TextBox x:Name="SearchInputBox"
                        Width="250"
                        Watermark="Type to search..."
                        KeyUp="SearchBox_KeyUp"/>

                <Button Content="Cancel Search"
                        Click="CancelSearch_Click"/>
            </StackPanel>

            <!-- Input area for new title/text -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10"
                        x:Name="InputPanel"
                        IsVisible="False">  <!-- Hidden by default -->

                <TextBox x:Name="TitleInputBox" Width="150" Watermark="Enter title..." />

                <TextBox x:Name="TextInputBox"
                        Width="250"
                        Height="150"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        Watermark="Enter text..." />

                <StackPanel Orientation="Vertical" Spacing="5">
                    <Button Content="Add" Click="Add_Click"/>
                    <Button Content="Cancel" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Scrollable list of entries -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ItemsPanel" Margin="0 10 0 0" Spacing="10"/>
            </ScrollViewer>

        </DockPanel>

</Window>
